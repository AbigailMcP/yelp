<p>Add a restaurant</p>

<%= form_tag("/restaurant", method: "post", multipart: true) do %>
  <%= label_tag(:name, "Restaurant name:") %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:description, "Description:") %>
  <%= text_field_tag(:description) %>
  <%= label_tag(:image, "Upload image:") %>
  <%= file_field_tag :image %>
  <%= submit_tag("add") %>
<% end %>
