
  <%= @restaurant.name %>
  <%= @restaurant.description %>
  Average Rating - <%= @score %>/5
  <% if @restaurant.user_id == current_user.id %>
  <%= button_to "edit", "/restaurant/#{@restaurant.id}/edit", method: :get %>
  <%= button_to "delete", "/restaurant/#{@restaurant.id}", method: :delete %>
  <% end %>
  <%= button_to "add review", "/restaurant/#{@restaurant.id}/review/new", method: :get %>

  <% @reviews.each do |review| %>
    <%= review.score %>/5 - <%= review.comment %>
    <br>
    <%= User.find(review.user_id).email %>
    <% if review.user_id == current_user.id %>
    <%= button_to "Delete review", "/restaurant/#{params[:restaurant_id]}/review/#{review.id}t", method: :delete %>
    <% end %>
    <br>
  <% end %>
