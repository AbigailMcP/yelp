<div class="jumbotron">
<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="login-container">

<h1 class="restaurant-index">Restaurant Reviews</h1>
<%= button_to "Back to Restaurant", "/restaurant/#{params[:restaurant_id]}/review", method: :delete, class: "btn btn-default" %>
<% if @reviews.empty?%>
  <%= 'There are no reviews' %>
<% else %>
  <% @reviews.each do |review| %>
  <div class="restaurant-container">
    <h3><%= review.score %>/5 - <%= review.comment %>
    <% if review.user_id == current_user.id %></h3>
    <%= button_to "Delete review", "/restaurant/#{params[:restaurant_id]}/review/#{review.id}", method: :delete, class: "btn btn-default center-block" %>
    <% end %>

  </div>
  <% end %>
<% end %>

</div>
</div>
